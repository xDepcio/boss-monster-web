    "version": "0.2.0",
    "configurations": [
        // This bac boy WORKS!!!!
        {
            "localRoot": "${workspaceFolder}/backend",
            "name": "Mocha Tests :(((",
            "program": "${workspaceFolder}/backend/node_modules/.bin/mocha",
            "request": "launch",
            "type": "node",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/backend/test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/backend/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/backend/test/game-spec.js"
        },
    ]
}
